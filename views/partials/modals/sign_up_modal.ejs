<form class="modal-content animate" onsubmit="signUpAndLogin()" action="javascript:void(0);">
    <div class="container">
        <label for="fname-signup">First Name</label>
        <input type="text" id="fname-signup" required>
        <label for="lname-signup">Last Name</label>
        <input type="text" id="lname-signup" required>
        <label for="uname-signup">User Name</label>
        <input type="text" id="uname-signup" required>
        <label for="pass-signup">Password</label>
        <input type="password" id="pass-signup" required>
        <label for="vpass-signup">Confirm Password</label>
        <input type="password" id="vpass-signup" required>
        <label for="mail-signup">Email</label>
        <input type="email" id="mail-signup" required>
        <label for="gender-signup">Gender</label>
        <select id="gender-signup" required>
            <option value="male" selected="selected">Male</option>
            <option value="female">Female</option>
        </select>
        </br>
        </br>
        <button type="submit">Sing Up</button>
    </div>
</form>