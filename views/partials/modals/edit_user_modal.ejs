<form class="modal-content animate" onsubmit="editUserData()" action="javascript:void(0);">
    <div class="container">
        <label for="fname-editUser">First Name</label>
        <input type="text" id="fname-editUser" required>
        <label for="lname-editUser">Last Name</label>
        <input type="text" id="lname-editUser" required>
        <label for="uname-editUser">User Name</label>
        <input type="text" id="uname-editUser" required disabled>
        <label for="uname-editUser">Edit password</label>
        <input type="checkbox" id="checkbox-pass-editUser" onclick="editPassword()">
        </br>
        <label for="pass-editUser">Old password</label>
        <input type="password" id="opass-editUser">
        <label for="pass-editUser">Password</label>
        <input type="password" id="pass-editUser">
        <label for="vpass-editUser">Confirm Password</label>
        <input type="password" id="vpass-editUser">
        <label for="mail-editUser">Email</label>
        <input type="email" id="mail-editUser" required>
        <label for="gender-editUser">Gender</label>
        <select id="gender-editUser" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>
        </br>
        </br>
        <button type="submit">Update</button>
    </div>
</form>